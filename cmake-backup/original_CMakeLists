cmake_minimum_required(VERSION 3.25)
project(library_book_manager)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_EXE_LINKER_FLAGS "-static")

aux_source_directory(${PROJECT_SOURCE_DIR}/src/functions/common         FUNC_LIST)
aux_source_directory(${PROJECT_SOURCE_DIR}/src/functions/borrow_history BORRW_HIST_LIST)
aux_source_directory(${PROJECT_SOURCE_DIR}/src/functions/menus          MENUS_LIST)
aux_source_directory(${PROJECT_SOURCE_DIR}/src/functions/utils          UTILS_LIST)

# REMIND: (aux_source_dir...) method cannot be used for files
#aux_source_directory(${PROJECT_SOURCE_DIR}/src/functions/utils/KMP/kmp_algorithms.cpp      KMP_PRG)
#aux_source_directory(${PROJECT_SOURCE_DIR}/src/main.cpp                                    MAIN_PRG)
set(MAIN_PRG ${PROJECT_SOURCE_DIR}/src/main.cpp)
set(KMP_PRG ${PROJECT_SOURCE_DIR}/src/functions/utils/KMP/kmp_algorithms.cpp)

# using macro
add_executable(library_book_manager  # this is the name of executive file generated
        ${MAIN_PRG}
        ${KMP_PRG}

        ${FUNC_LIST}
        ${BORRW_HIST_LIST}
        ${MENUS_LIST}
        ${UTILS_LIST}
)

